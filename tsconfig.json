{
    "compilerOptions": {
        "allowUnreachableCode": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true, 
        "noImplicitThis": true,
        "outDir": "dist",
        "rootDir": "src",
        "strictBindCallApply": true,
        "target": "esnext"
    },
    "include": [
        "./src/**/*.ts"
    ]
}