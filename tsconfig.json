{
    "compilerOptions": {
        "allowUnreachableCode": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true, 
        "noImplicitThis": true,
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "strictBindCallApply": true,
        "target": "esnext",
        "tsBuildInfoFile": "dist/.buildinfo"
    }
}